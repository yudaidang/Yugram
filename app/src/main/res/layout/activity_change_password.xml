<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lab.yu.yugram.Activity.ChangePasswordActivity">
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <include layout="@layout/snippet_top_setting" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rel1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/rel2"
        android:background="@drawable/login_animation_background">
        <ImageView
            android:id="@+id/avatarProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:background="@drawable/all_circle_white_bg">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Yugram"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_below="@+id/avatarProfile"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:fontFamily="cursive"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/rel2"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:weightSum="6">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mật Khẩu"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:background="@drawable/white_border_edittext"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập lại mật khẩu"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:background="@drawable/white_border_edittext"/>

        <Button
            android:id="@+id/button2"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_animation_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lưu mật khẩu"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>
</RelativeLayout>
