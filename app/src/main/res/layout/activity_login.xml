<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_layer"
    android:id="@+id/login"
    tools:context="lab.yu.yugram.Activity.LoginActivity">
        <RelativeLayout
            android:layout_below="@id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel2">
            <ImageView
                android:id="@+id/avatarApp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher_round"
                android:padding="5dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Yugram"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_below="@+id/avatarApp"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rel2"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="50dp"
            android:weightSum="6">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Tài khoản"
                android:paddingLeft="30dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:ems="10"
                android:background="@drawable/white_border_edittext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Mật khẩu"
                android:textSize="15dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:background="@drawable/white_border_edittext"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_animation_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Đăng Nhập"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

</RelativeLayout>
